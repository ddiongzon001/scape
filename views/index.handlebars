{{!-- nav bar --}}

<nav class="navbar navbar-expand-lg navbar-dark bg-danger">
    <a class="navbar-brand" href="#">Your Anime List</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Saved Anime</a>
            </li>
        </ul>
        <div class="inline">
            <button type="button" class="btn btn-dark" id="render">Get New Anime</button>
            <button type="button" class="btn btn-dark" id="clear">Clear Anime</button>
        </div>
    </div>
</nav>

<div id="wrapper">
    <div id="articles">

        {{#each article}}
        <div class="card">
            <h5 class="card-header">{{title}}</h5>
            <div class="card-body">
                <p>{{image}}</p>
                <p>{{link}}</p>
                <img src="{{image}}">
                <p class="card-text">{{summary}}</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        {{/each}}
    </div>
    <div id="notes"></div>
</div>